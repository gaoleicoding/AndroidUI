<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.customview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".touchevent.DispatchActivity" />
        <activity android:name=".touchevent.TextActivity" />
        <activity android:name=".viewpager.ViewPagerActivity" />
        <activity android:name=".viewpager.VPFragmentActivity" />
        <activity android:name=".viewpager.VPInfiniteActivity" />
        <activity android:name=".viewpager.VPInfiniteActivity2" />
        <activity android:name=".calculator.CalculatorActivity" />
        <activity android:name=".view.StyleActivity" />
        <activity android:name=".recorder.RecorderActivity" />
        <activity android:name=".skin.ZipActivity" />
        <activity android:name=".view.ViewActivity" />
        <activity android:name=".view.CanvasActivity" />
        <activity android:name=".coordinatorlayout.BehaviorActivity" />
        <activity
            android:name=".activitypart.PartActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>