<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gotoCustomTabLayout"
        android:text="CustomTabLayout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/baike_second_tablayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicator="@drawable/tab_indicator_layout"
        app:tabIndicatorColor="#FC6600"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabRippleColor="@android:color/transparent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0D000000" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/baike_second_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>